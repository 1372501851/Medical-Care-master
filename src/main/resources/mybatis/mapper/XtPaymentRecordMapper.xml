<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.common.mapper.XtPaymentRecordMapper">
    
    <resultMap type="XtPaymentRecord" id="XtPaymentRecordResult">
        <result property="paymentRecordId"    column="payment_record_id"    />
        <result property="userid"    column="userid"    />
        <result property="ucompid"    column="ucompid"    />
        <result property="uoperCompid"    column="uoper_compid"    />
        <result property="tradeNo"    column="trade_no"    />
        <result property="description"    column="description"    />
        <result property="amount"    column="amount"    />
        <result property="paymentMethod"    column="payment_method"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectXtPaymentRecordVo">
        select payment_record_id, userid, ucompid, uoper_compid, trade_no, description, amount, payment_method, status, create_time from xt_payment_record
    </sql>

    <select id="selectXtPaymentRecordList" parameterType="XtPaymentRecord" resultMap="XtPaymentRecordResult">
        <include refid="selectXtPaymentRecordVo"/>
        <where>  
            <if test="userid != null  and userid != ''"> and userid = #{userid}</if>
            <if test="ucompid != null  and ucompid != ''"> and ucompid = #{ucompid}</if>
            <if test="uoperCompid != null  and uoperCompid != ''"> and uoper_compid = #{uoperCompid}</if>
            <if test="tradeNo != null  and tradeNo != ''"> and trade_no = #{tradeNo}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="paymentMethod != null  and paymentMethod != ''"> and payment_method = #{paymentMethod}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectXtPaymentRecordByPaymentRecordId" parameterType="String" resultMap="XtPaymentRecordResult">
        <include refid="selectXtPaymentRecordVo"/>
        where payment_record_id = #{paymentRecordId}
    </select>
        
    <insert id="insertXtPaymentRecord" parameterType="XtPaymentRecord">
        insert into xt_payment_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="paymentRecordId != null">payment_record_id,</if>
            <if test="userid != null">userid,</if>
            <if test="ucompid != null">ucompid,</if>
            <if test="uoperCompid != null">uoper_compid,</if>
            <if test="tradeNo != null">trade_no,</if>
            <if test="description != null">description,</if>
            <if test="amount != null">amount,</if>
            <if test="paymentMethod != null">payment_method,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="paymentRecordId != null">#{paymentRecordId},</if>
            <if test="userid != null">#{userid},</if>
            <if test="ucompid != null">#{ucompid},</if>
            <if test="uoperCompid != null">#{uoperCompid},</if>
            <if test="tradeNo != null">#{tradeNo},</if>
            <if test="description != null">#{description},</if>
            <if test="amount != null">#{amount},</if>
            <if test="paymentMethod != null">#{paymentMethod},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateXtPaymentRecord" parameterType="XtPaymentRecord">
        update xt_payment_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="userid != null">userid = #{userid},</if>
            <if test="ucompid != null">ucompid = #{ucompid},</if>
            <if test="uoperCompid != null">uoper_compid = #{uoperCompid},</if>
            <if test="tradeNo != null">trade_no = #{tradeNo},</if>
            <if test="description != null">description = #{description},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="paymentMethod != null">payment_method = #{paymentMethod},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where payment_record_id = #{paymentRecordId}
    </update>

    <delete id="deleteXtPaymentRecordByPaymentRecordId" parameterType="String">
        delete from xt_payment_record where payment_record_id = #{paymentRecordId}
    </delete>

    <delete id="deleteXtPaymentRecordByPaymentRecordIds" parameterType="String">
        delete from xt_payment_record where payment_record_id in 
        <foreach item="paymentRecordId" collection="array" open="(" separator="," close=")">
            #{paymentRecordId}
        </foreach>
    </delete>
</mapper>