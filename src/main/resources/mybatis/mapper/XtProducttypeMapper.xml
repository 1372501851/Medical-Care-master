    <delete id="deleteXtProducttypeByUproducttypeid" parameterType="String">
        delete from xt_producttype where uproducttypeid = #{uproducttypeid}
    </delete>

    <delete id="deleteXtProducttypeByUproducttypeids" parameterType="String">
        delete from xt_producttype where uproducttypeid in
        <foreach item="uproducttypeid" collection="array" open="(" separator="," close=")">
            #{uproducttypeid}
        </foreach>
    </delete>
</mapper>
