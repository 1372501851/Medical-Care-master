<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.user.mapper.XtUserMapper">

    <resultMap type="XtUser" id="XtUserResult">
        <result property="userid"    column="userid"    />
        <result property="uloginname"    column="uloginname"    />
        <result property="upassword"    column="upassword"    />
        <result property="unickname"    column="unickname"    />
        <result property="username"    column="username"    />
        <result property="ubirthday"    column="ubirthday"    />
        <result property="usex"    column="usex"    />
        <result property="uweixin"    column="uweixin"    />
        <result property="ulogins"    column="ulogins"    />
        <result property="upaserrnum"    column="upaserrnum"    />
        <result property="upaserrtime"    column="upaserrtime"    />
        <result property="uregdate"    column="uregdate"    />
        <result property="ulastlogtime"    column="ulastlogtime"    />
        <result property="ueflag"    column="ueflag"    />
        <result property="status"             column="status"                />
        <result property="delFlag"            column="del_flag"              />
        <result property="createTime"         column="create_time"           />
        <result property="updateTime"         column="update_time"           />
        <result property="avatar" column="avatar"/>
        <result property="phone" column="phone"/>
    </resultMap>

    <sql id="selectXtUserVo">
        select userid, uloginname, upassword, unickname, username, ubirthday, usex, uweixin, ulogins, upaserrnum, upaserrtime, uregdate, ulastlogtime, ueflag,
            status,del_flag,create_time,update_time,avatar,phone
        from xt_user
    </sql>

    <select id="selectXtUserList" parameterType="XtUser" resultMap="XtUserResult">
        <include refid="selectXtUserVo"/>
        <where>
            del_flag = '0'
            <if test="uloginname != null  and uloginname != ''"> and uloginname = #{uloginname})</if>
            <if test="unickname != null  and unickname != ''"> and unickname like concat('%', #{unickname}, '%')</if>
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="ubirthday != null "> and ubirthday = #{ubirthday}</if>
            <if test="usex != null  and usex != ''"> and usex = #{usex}</if>
            <if test="uweixin != null  and uweixin != ''"> and uweixin = #{uweixin}</if>
            <if test="ulogins != null "> and ulogins = #{ulogins}</if>
            <if test="upaserrnum != null "> and upaserrnum = #{upaserrnum}</if>
            <if test="upaserrtime != null "> and upaserrtime = #{upaserrtime}</if>
            <if test="uregdate != null "> and uregdate = #{uregdate}</if>
            <if test="ulastlogtime != null "> and ulastlogtime = #{ulastlogtime}</if>
            <if test="ueflag != null  and ueflag != ''"> and ueflag = #{ueflag}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
        </where>
    </select>

    <select id="selectXtUserByUserid" parameterType="String" resultMap="XtUserResult">
        <include refid="selectXtUserVo"/>
        where userid = #{userid}
    </select>

    <select id="selectXtUserByUserLoginName" parameterType="String" resultMap="XtUserResult">
        <include refid="selectXtUserVo"/>
        where uloginname = #{loginname}
    </select>

    <select id="selectCommmonXtUserList" resultMap="XtUserResult">
        select userid, uloginname, upassword, unickname, username, ubirthday, usex, uweixin, ulogins, upaserrnum, upaserrtime, uregdate, ulastlogtime, ueflag,
               status,del_flag,create_time,update_time,avatar,phone
        from xt_user


    </select>

    <insert id="insertXtUser" parameterType="XtUser">
        insert into xt_user
        (
        <if test="userid != null">userid,</if>
        <if test="uloginname != null and uloginname != ''">uloginname,</if>
        <if test="upassword != null and upassword != ''">upassword,</if>
        <if test="unickname != null">unickname,</if>
        <if test="username != null">username,</if>
        <if test="ubirthday != null">ubirthday,</if>
        <if test="usex != null">usex,</if>
        <if test="uweixin != null">uweixin,</if>
        <if test="ulogins != null">ulogins,</if>
        <if test="upaserrnum != null">upaserrnum,</if>
        <if test="upaserrtime != null">upaserrtime,</if>
        <if test="uregdate != null">uregdate,</if>
        <if test="ulastlogtime != null">ulastlogtime,</if>
        <if test="ueflag != null">ueflag,</if>
        <if test="avatar != null">avatar,</if>
        <if test="phone != null">phone,</if>
        create_time,status,del_flag
        )
        values (
        <if test="userid != null">#{userid},</if>
        <if test="uloginname != null and uloginname != ''">#{uloginname},</if>
        <if test="upassword != null and upassword != ''">#{upassword},</if>
        <if test="unickname != null">#{unickname},</if>
        <if test="username != null">#{username},</if>
        <if test="ubirthday != null">#{ubirthday},</if>
        <if test="usex != null">#{usex},</if>
        <if test="uweixin != null">#{uweixin},</if>
        <if test="ulogins != null">#{ulogins},</if>
        <if test="upaserrnum != null">#{upaserrnum},</if>
        <if test="upaserrtime != null">#{upaserrtime},</if>
        <if test="uregdate != null">#{uregdate},</if>
        <if test="ulastlogtime != null">#{ulastlogtime},</if>
        <if test="ueflag != null">#{ueflag},</if>
        <if test="avatar != null">#{avatar},</if>
        <if test="phone != null">#{phone},</if>
        sysdate(),'0','0'
        )
    </insert>

    <update id="updateXtUser" parameterType="XtUser">
        update xt_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="uloginname != null and uloginname != ''">uloginname = #{uloginname},</if>
            <if test="unickname != null">unickname = #{unickname},</if>
            <if test="username != null">username = #{username},</if>
            <if test="ubirthday != null">ubirthday = #{ubirthday},</if>
            <if test="usex != null">usex = #{usex},</if>
            <if test="uweixin != null">uweixin = #{uweixin},</if>
            <if test="ulogins != null">ulogins = #{ulogins},</if>
            <if test="upaserrnum != null">upaserrnum = #{upaserrnum},</if>
            <if test="upaserrtime != null">upaserrtime = #{upaserrtime},</if>
            <if test="uregdate != null">uregdate = #{uregdate},</if>
            <if test="ulastlogtime != null">ulastlogtime = #{ulastlogtime},</if>
            <if test="ueflag != null">ueflag = #{ueflag},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="phone != null">phone = #{phone},</if>
            update_time = sysdate()
        </trim>
        where userid = #{userid}
    </update>

    <delete id="deleteXtUserByUserid" parameterType="String">
        delete from xt_user where userid = #{userid}
    </delete>

    <delete id="deleteXtUserByUserids" parameterType="String">
        update xt_user set del_flag = '2' where userid in
        <foreach item="userid" collection="array" open="(" separator="," close=")">
            #{userid}
        </foreach>
    </delete>
</mapper>
